        android:hint="URL del Recurso" />

    <EditText
        android:id="@+id/editTextImagenEnlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL de la Imagen" />

    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="match_parent"
